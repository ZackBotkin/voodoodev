<html ng-app="courseInput">
	<head>
		<title>Courses</title>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
		<link href="stylesheets/style.css" rel="stylesheet">	
		<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
		<script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>	
		<script src="http://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.1/moment.min.js"></script>
		<script src="http://cdnjs.cloudflare.com/ajax/libs/angular-moment/0.10.0/angular-moment.min.js"></script>

		<!-- the ui shit -->
		<script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.13.0.js"></script>

		<script src="/javascripts/AngularApp.js"></script>
		<script src="/javascripts/routing.js"></script>
		<script src="/javascripts/controllers/MainCtrl.js"></script>
		<script src="/javascripts/controllers/userHomePageCtrl.js"></script>
		<script src="/javascripts/controllers/ScheduleCtrl.js"></script>	
		<script src="/javascripts/controllers/BreatherCtrl.js"></script>
		<script src="/javascripts/controllers/TaskCtrl.js"></script>
		<script src="/javascripts/controllers/CourseCtrl.js"></script> 
		<script src="/javascripts/controllers/AuthCtrl.js"></script>
		<script src="/javascripts/controllers/NavCtrl.js"></script>
		<script src="/javascripts/controllers/SideNavCtrl.js"></script>
		<script src="/javascripts/services/authService.js"></script> 
		<script src="/javascripts/services/taskService.js"></script>
		<script src="/javascripts/services/userService.js"></script>
		<script src="/javascripts/services/scheduleService.js"></script>
		<script src="/javascripts/services/breatherService.js"></script>
		<script src="/javascripts/services/courseService.js"></script>
		<style> .glyphicon-thumbs-up { cursor:pointer } </style>

		<!--
		<script src="/bootstrap/src/typeahead/typeahead.js"></script>
		-->

	</head>
	<body ng-controller="MainCtrl">

		<nav class="navbar navbar-inverse" ng-controller="NavCtrl">
			<ul class="nav navbar-nav pull-left top-nav">
				<li><a href="/#/home" class="navbar-brand">Brainless</a></li>
				<li class="search" id= "typeahead-bar">
					<input
					type= "text"
					ng-model= "searchText"
					placeholder = "Search for something"
					typeahead = "result.text for result in getSearchResults($viewValue)"
`					typeahead-on-select = "onSelect($item, $model, $label)"
					class = "form-control"	
					></input>
				</li>
			</ul>
			<ul class="nav navbar-nav pull-right top-nav">
				<li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown"></span><span>{{Pcount}}<span class="caret"></span> </a>
                                            <ul class="dropdown-menu">
                                                <li class="dropdown-header">Pending Assignments</li>
						<li class="divider"></li>
						<li ng-repeat="pending in pendings">
                                                <a href = "#/courses/{{pending.course}}">
                                                        {{pending.name}}
                                                </a>
                                                <a class="joining glyphicon glyphicon-flash" ng-click="joinAssignment(pending)"></a>
                                                </li>
						<li ng-show="Pcount===0">You have no Pending Assignments</li>
                                            </ul>
                                 </li>
				<li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
				<li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
				<li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
				<li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
			</ul>
		</nav>
		  
		<div class="row">
			<nav class="col-md-2 bs-docs-sidebar" ng-controller="SideNavCtrl">
				<ul id="sidebar" class="nav nav-stacked navbar-inverse">
						
					<li><a href="#/schedule">Schedule</a></li>
					<li class="dropdown">
					    <a class="dropdown-toggle" data-toggle="dropdown">Tasks<span class="caret"></span><span class="notify" ng-show="tasks">{{Tcount}}</span></a>
					    <ul class="dropdown-menu">
						<li><a href="#/taskshome">Search Tasks</a></li>
						<li ng-repeat="task in tasks">
						<a href = "#/tasks/{{task._id}}">
							{{task.description}}
						</a>
						</li>
					    </ul>
					</li>
					<li class="dropdown">
					    <a class="dropdown-toggle" data-toggle="dropdown">Courses<span class="caret"></span><span class="notify" >{{Ccount}}</span></a>
					    <ul class="dropdown-menu">
						<li><a href="#/courseshome">Search Courses</a></li>
						<li ng-repeat="course in courses">
						<a href = "#/courses/{{course._id}}">
							{{course.title}}
						</a>
						</li>
					    </ul>
					</li>
					<li class="dropdown">
					    <a class="dropdown-toggle" data-toggle="dropdown">Breathers<span class="caret"></span><span class="notify">{{Bcount}}</span></a>
					    <ul class="dropdown-menu">
						<li><a href="#/breathershome">Search Breathers</a></li>
						<li ng-repeat="breather in breathers">
						<a href = "#/breathers/{{breather._id}}">	
							{{breather.title}}
						</a>
						</li>
					    </ul>
					</li>
				</ul>
			</nav>
			
			<div class="col-md-8">
				<ui-view></ui-view>
			</div>
		</div>

		<script type="text/ng-template" id="/home.html"  ></script>  
		<script type="text/ng-template" id="/coursesHome.html"  ></script>
		<script type="text/ng-template" id="/courses.html" ></script>
		<script type="text/ng-tempalte" id="/tasks.html" ></script> 
		<script type="text/ng-template" id="/tasksHome.html" ></script>
		<script type="text/ng-template" id="/schedule.html" ></script>
		<script type="text/ng-template" id="/userHomePage.html" > </script>
		<script type="text/ng-template" id="/breathersHome.html" ></script>
		<script type="text/ng-template" id="/breathers.html" ></script>
		<script type="text/ng-template" id="/test.html"><script>
		<script type="text/ng-template" id="/register.html"><script>
		<script type="text/ng-template" id="/login.html"><script>

	</body>
</html>
